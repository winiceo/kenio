extends ../shared/layout

block main-content
    include ../shared/mixins/form_group_input.jade
    table.table.table-bordered.table-striped.table-hover
        caption Initiatives
        thead
            tr
                th.text-center Name
                th.text-center Edit
                th.text-center Delete
        tbody
            each blog in blogs
                tr
                    td.text-center #{blog.title}
                    td.text-center
                        a(href="/blog/#{blog._id}/edit" class="btn btn-warning")
                            span(class="glyphicon glyphicon-pencil" aria-hidden="true")
                    td.text-center
                        button(type="button" class="btn btn-danger")
                            span(class="glyphicon glyphicon-remove" aria-hidden="true")



    form(method="post" class="form-horizontal well")
        fieldset
            +formGroupInput('blog', 'title', 'title', "标题")
            +formGroupInput('blog', 'content', 'conent',"内容")
            .col-lg-10.col-lg-offset-2
                input(type="submit" class="btn btn-default" value="Create new")

